@using Microsoft.AspNetCore.Http.Extensions
@model System.Collections.Generic.List<hackathonvoice.Database.Models.Patient>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container">
    <div class="table-responsive">
        <table id="patients" class="table table-hover">
            <thead>
            <tr>
                <th>
                    Полное имя
                </th>
                <th>
                    Полис
                </th>
                <th>
                    Действия
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var patient in Model)
            {
                string url = @Url.ActionContext.HttpContext.Request.GetDisplayUrl() + "/" + patient.PatientGuid.ToString();
                
                <tr>

                    <td>@patient.FullName</td>
                    <td>@patient.Poliсy</td>
                    <td>
                        <span data-toggle="tooltip" data-placement="top" title="Посещения пациента">
                            <a class="btn btn-light btn-sm btn-block" role="button" href="@url">
                                <i class="fa fa-info fa-lg " aria-hidden="true"></i>
                            </a>
                        </span>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
